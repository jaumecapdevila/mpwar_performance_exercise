{% extends "layout.twig" %}

{% block title %}Edit Article{% endblock title %}

{% block content %}
<div class="row">
    <div class="col-xs-12 col-md-8">
        <form method="POST" action="{{ path('editArticle', {articleId: article.id}) }}">
            Title <br/>
            <input type="text" name="title" id="title" value="{{ article.title }}"/> <br/>
            <input type="hidden" name="article_id" id="article_id" value="{{ article.id }}"/> <br/>
            Text <br/>
            <textarea name="content" id="content" style="width: 300px; height: 150px;"> {{ article.content }}</textarea>
            <br/>
            <input type="submit" value="Save"/>
        </form>
    </div>
</div>
{% endblock %}